{
  "db": {
    "url": "postgres://postgres:postgres@localhost:5432/postgres",
    "schema": "flexy_watch"
  },
  "log4js": {
    "appenders": {
      "out": {
        "type": "console",
        "layout": {
          "type": "pattern",
          "pattern": "%[[%d{yyyy-MM-dd hh:mm:ss.SSS}] [%p] [%c]%] - %m"
        }
      }
    },
    "categories": {
      "request-logger": {"appenders": ["out"], "level": "info"},
      "database-logger": {"appenders": ["out"], "level": "debug"},
      "bin/www": {"appenders": ["out"], "level": "info"},
      "default": { "appenders": ["out"], "level": "error" }
    }
  }
}
