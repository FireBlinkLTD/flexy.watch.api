{
  "db": {
    "url": "postgres://postgres:postgres@localhost:5432/postgres",
    "schema": "flexy_watch"
  },
  "logger": {
    "appenders": {
      "out": {
        "type": "stdout",
        "levels": ["debug", "info"],
        "layout": {
          "type": "pattern",
          "pattern": "%[[%d{yyyy-MM-dd hh:mm:ss.SSS}] [%p] [%c]%] - %m"
        }
      },
      "err": {
        "type": "stderr",
        "levels": ["warn", "error"],
        "layout": {
          "type": "pattern",
          "pattern": "%[[%d{yyyy-MM-dd hh:mm:ss.SSS}] [%p] [%c]%] - %m"
        }
      }
    },
    "categories": {
      "request-logger": {"level": "info"},
      "database-logger": {"level": "debug"},
      "bin/www": {"level": "info"},
      "default": {"level": "debug"}
    }
  }
}
